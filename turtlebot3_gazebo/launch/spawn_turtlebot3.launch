<?xml version="1.0"?>
<launch>
    <!-- Declare arguments -->
    <arg name="model" default="burger" description="Specify robot model"/>
    <arg name="x_pose" default="0.0" description="Specify x position of the robot"/>
    <arg name="y_pose" default="0.0" description="Specify y position of the robot"/>

    <!-- Set up model path -->
    <let name="urdf_path" value="$(find-pkg-share turtlebot3_gazebo)/models/turtlebot3_$(var model)/model.sdf"/>

    <!-- Launch spawn_entity node -->
    <node pkg="gazebo_ros"
          exec="spawn_entity.py"
          name="spawn_turtlebot"
          output="screen"
          args="-entity $(var model)
                -file $(var urdf_path)
                -x $(var x_pose)
                -y $(var y_pose)
                -z 0.01"/>
</launch>